
<div class="container text-center">
  <div class="row">
    <h1>Our Restaurants</h1>
    <% @restaurants.each do |restaurant| %>
      <div class="col-xs-4">
        <h1><%= link_to restaurant.name, restaurant_path(restaurant), class: "btn" %></h1>
        <h6><%= link_to "delete", restaurant_path(restaurant),
            method: :delete,
            data: { confirm: "Are you sure?" },
            class: "btn-sm btn-danger" %>
        </h6>
      </div>
    <% end %>
  </div>
</div>


<div class="text-center">
  <%= link_to "create", new_restaurant_path, class: "btn btn-primary" %>
</div>
